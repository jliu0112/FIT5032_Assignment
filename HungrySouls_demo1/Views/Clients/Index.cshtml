@model IEnumerable<HungrySouls_demo1.Models.Client>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Client_FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client_LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client_DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client_Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client_Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client_Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Client_FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Client_LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Client_DOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Client_Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Client_Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Client_Address)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ClientID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ClientID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ClientID })
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
@Scripts.Render("~/Scripts/DataTables/jquery.dataTables.js")
@Scripts.Render("~/Scripts/DataTables/dataTables.bootstrap.js")
<script>
    $(document).ready(function () {
        $('.table').DataTable();
    });
</script>
}
<link href="~/Content/DataTables/css/dataTables.bootstrap.min.css"
      rel="stylesheet" />